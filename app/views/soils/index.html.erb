<div class="row">
   <h1>Listing soils</h1>
   <table>
     <thead>
       <tr>
         <th>Name</th>
         <th></th>
       </tr>
     </thead>

     <tbody>
       <% @soils.each do |soil| %>
         <tr>
           <td><%= soil.name %></td>
            <td>
              <%= link_to raw('<i class="fi-eye"></i>'), soil %>
              <%= link_to raw('<i class="fi-pencil"></i>'), edit_soil_path(soil) %>
              <%= link_to raw('<i class="fi-trash"></i>'), soil, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
         </tr>
       <% end %>
     </tbody>
   </table>
   <br>
   <div class="small-4 columns">
   </div>
   <div class="small-4 columns">
      
   </div>
   <div class="small-4 columns">
      <p class="text-right"><%= link_to 'New Soil', new_soil_path %></p>
   </div>
</div>
