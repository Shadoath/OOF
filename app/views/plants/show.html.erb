<div class="row">
  <div class="small-12 columns">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Name:</strong>
        <%= @plant.name %>
      </p>

      <p>
        <strong>Type:</strong>
        <%= @plant.plant_type %>
      </p>

      <p>
        <strong>Group:</strong>
        <%= @plant.plant_group %>
