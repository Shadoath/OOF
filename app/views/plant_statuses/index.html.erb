<h1>Listing plant_statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plant_statuses.each do |plant_status| %>
      <tr>
        <td><%= plant_status.name %></td>
        <td><%= link_to raw('<i class="fi-eye"></i>'), plant_status %></td>
        <td><%= link_to raw('<i class="fi-pencil"></i>'), edit_plant_status_path(plant_status) %></td>
        <td><%= link_to raw('<i class="fi-trash"></i>'), plant_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant status', new_plant_status_path, { :class=>"button small round success" } %>
