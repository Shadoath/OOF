<div class="row">
<h1>Listing soils</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @soils.each do |soil| %>
      <tr>
        <td><%= soil.name %></td>
        <td><%= link_to 'Show', soil %></td>
        <td><%= link_to 'Edit', edit_soil_path(soil) %></td>
        <td><%= link_to 'Destroy', soil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Soil', new_soil_path %>
</div>
