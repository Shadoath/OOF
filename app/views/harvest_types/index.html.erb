<h1>Listing harvest_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @harvest_types.each do |harvest_type| %>
      <tr>
        <td><%= harvest_type.name %></td>
         <td><%= link_to raw('<i class="fi-eye"></i>'), harvest_type %></td>
        <td><%= link_to raw('<i class="fi-pencil"></i>'), edit_harvest_type_path(harvest_type) %></td>
        <td><%= link_to raw('<i class="fi-trash"></i>'), harvest_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Harvest type', new_harvest_type_path, { :class=>"button small round success" } %>
