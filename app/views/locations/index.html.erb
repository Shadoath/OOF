<h1>Listing locations</h1>
<p class="text-left"><%= link_to 'New Location', new_location_path %></p>


<%= form_tag '/locations/edit_multiple' do %>
<%= submit_tag "Edit Checked" %>
   <table>
     <thead>
       <tr>
          <th></th>
          <th><%= sortable "Name", "name" %></th>
          <th><%= sortable "Soil", "soil_id" %></th>
          <th><%= sortable "Size", "size" %></th>
          <th><%= sortable "Comment", "comment" %></th>
          <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @locations.each do |location| %>
         <tr>
            <td><%= check_box_tag "location_ids[]", location.id %></td>
            <td><%= location.name %></td>
            <td><%= location.soil.name %></td>
            <td><%= location.size %></td>
            <td><%= location.comment %></td>
            <td><%= link_to 'Show', location %></td>
            <td><%= link_to 'Edit', edit_location_path(location) %></td>
            <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
   <%= submit_tag "Edit Checked" %>
<% end %>
<br>
   <div class="small-4 columns">
         <%= link_to 'Plants', plants_path %>
   </div>
   <div class="small-4 columns">
      <p class="text-center"><%= link_to 'Active Plants', active_plants_path %></p>
   </div>
   <div class="small-4 columns">
      <p class="text-right"><%= link_to 'Records', active_plant_records_path %></p>

   </div>
