<h1>Listing plants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Group</th>
      <th>Harvest type</th>
      <th>Water amount</th>
      <th>Comment</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.plant_type %></td>
        <td><%= plant.plant_group %></td>
        <td><%= plant.harvest_type.name if plant.harvest_type %></td>
        <td><%= plant.water_amount.name if plant.water_amount %></td>
        <td><%= plant.comment %></td>
        <td><%= link_to raw('E<i class="fi-pencil"></i>'), edit_plant_path(plant), :title => "Edit this plant" %> |
            <%= link_to raw('S<i class="fi-eye"></i>'), plant, :title => "View this plant" %> |
            <%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny alert" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
   <div class="small-4 columns">
      <%= link_to 'New Plant', new_plant_path %>
   </div>
   <div class="small-4 columns">
      <%= link_to 'Edit selected', '#TODO' %>
   </div>
   <div class="small-4 columns">
      <%= link_to 'New Plant', new_plant_path %>
   </div>
</div>
