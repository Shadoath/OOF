<div class="row">
  <div class="small-12 columns">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Name:</strong>
        <%= @plant.name %>
      </p>

      <p>
        <strong>Type:</strong>
        <%= @plant.plant_type %>
      </p>

      <p>
        <strong>Group:</strong>
        <%= @plant.plant_group %>
      </p>

      <p>
        <strong>Harvest Type:</strong>
         <%= @plant.harvest_type.name %>
      </p>

      <p>
        <strong>Water amount:</strong>
         <%= @plant.water_amount.name %>
      </p>

      <p>
        <strong>Comment:</strong>
        <%= @plant.comment %>
      </p>
   </div>
</div>
<div class="row">
   <div class="small-12 columns">
      <div class="small-4 columns">
         <%= link_to 'All Plants', plants_path %>
      </div>
      <div class="small-4 columns">
         <%= link_to 'Edit', edit_plant_path(@plant) %>
      </div>
      <div class="small-4 columns">
         <%= link_to 'New Plant', new_plant_path %>
      </div>
   </div>
</div>