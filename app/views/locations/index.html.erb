<h1>Listing locations</h1>
<p class="text-left"><%= link_to 'New Location', new_location_path, { :class=>"button small round success" } %></p>


<%= form_tag '/locations/edit_multiple' do %>
<%= submit_tag "Edit Checked" %>
   <table>
     <thead>
       <tr>
          <th></th>
          <th><%= sortable "Name", "name" %></th>
          <th><%= sortable "Soil", "soil_id" %></th>
          <th><%= sortable "Size", "size" %></th>
          <th><%= sortable "Comment", "comment" %></th>
          <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @locations.each do |location| %>
         <tr>
            <td><%= check_box_tag "location_ids[]", location.id %></td>
            <td><%= location.name %></td>
            <td><%= location.soil.name %></td>
            <td><%= location.size %></td>
            <td><%= location.comment %></td>
            <td><%= link_to raw('<i class="fi-eye"></i>'), location %></td>
            <td><%= link_to raw('<i class="fi-pencil"></i>'), edit_location_path(location) %></td>
            <td><%= link_to raw('<i class="fi-trash"></i>'), location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
   <%= submit_tag "Edit Checked" %>
<% end %>
<br>
<p class="text-left"><%= link_to 'New Location', new_location_path, { :class=>"button small round success" } %></p>
<div class="row">
   <div class="small-4 columns">
         <b><%= link_to 'Plants', plants_path, { :class=>"button small round" } %></b>
   </div>
   <div class="small-4 columns">
      <b><p class="text-center"><%= link_to 'Active Plants', active_plants_path, { :class=>"button small round" } %></p></b>
   </div>
   <div class="small-4 columns">
      <b><p class="text-right bold"><%= link_to 'Soils', soils_path, { :class=>"button small round disabled" } %></p></b>
   </div>
</div>
