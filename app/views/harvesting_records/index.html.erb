<div class="row">
  <div class="small-12 columns">
        <div class="small-12 columns">
           <h1>Listing Harvesting Records</h1>
        </div>
        <div class="small-12 columns">
           <p class="text-left"><%= link_to 'New Harvesting Record', new_harvesting_record_path, { :class=>"button small round success" } %></p>
        </div>
     <table>
      <thead>
         <tr>
            <th><%= sortable "Plant", "plant_id" %></th>
            <th><%= sortable "Location", "location_id" %></th>
            <th><%= sortable "Date", "date_harvested" %></th>
            <th><%= sortable "Harvested", "count_harvested" %></th>
            <td> </td>
         </tr>
      </thead>

      <tbody>
         <% @harvesting_records.each do |harvesting_record| %>
         <tr>
            <% if harvesting_record.active_plant %>
            <td><%= harvesting_record.active_plant.plant.name %></td>
            <td><%= harvesting_record.active_plant.location.name %></td>
            <td><%= harvesting_record.date_harvested %></td>
            <td><%= harvesting_record.count_harvested %> <%= harvesting_record.weight_type.name %></td>
            <td><%= link_to raw('<i class="fi-eye"></i>'), harvesting_record %> | <%= link_to raw('<i class="fi-pencil"></i>'), edit_harvesting_record_path(harvesting_record) %> | <%= link_to raw('<i class="fi-trash"></i>'), harvesting_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>

         </tr>
         <% end %>
      </tbody>
   </table>

      <br>
      <div class="row">
         <div class="small-4 columns">
            <%= link_to 'Home', '/' %>
         </div>
         <div class="small-4 columns">
         </div>
         
     </div>
   </div>
</div>