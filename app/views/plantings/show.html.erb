<div class="row">
  <div class="small-12 columns">
     <p id="notice"><%= notice %></p>
     <p>
        <strong>Active plant:</strong>
        <%= @planting.active_plant.plant.name   %>
     </p>

     <p>
        <strong>Status:</strong>
        <%= @planting.plant_status.name %>
     </p>

     <p>
        <strong>Location:</strong>
        <%= @planting.location.name if @planting.location%>
     </p>

     <p>
        <strong>Count planted:</strong>
        <%= @planting.count_planted %>
     </p>

     <p>
        <strong>Date planted:</strong>
        <%= @planting.date_planted %>
     </p>
     <%= link_to 'Edit', edit_planting_path(@planting) %> |
     <%= link_to 'All Plantings', plantings_path %>
   </div>
</div>
