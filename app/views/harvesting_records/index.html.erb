<div class="row">
  <div class="small-12 columns">
      <h1>Listing Harvesting Records</h1>

      <table>
        <thead>
          <tr>
             <td>Plant</td>
             <td>Location</td>
             <td>Date</td>
             <td>Harvested</td>
             <td> </td>
          </tr>
        </thead>

        <tbody>
          <% @harvesting_records.each do |harvesting_record| %>
            <tr>
               <% if harvesting_record.active_plant %>
                  <td><%= harvesting_record.active_plant.plant.name %></td>
                  <td><%= harvesting_record.active_plant.location.name %></td>
                  <td><%= harvesting_record.date_harvested %></td>
                  <td><%= harvesting_record.count_harvested %> <%= harvesting_record.weight_type.name %></td>

                 <td><%= link_to 'Show', harvesting_record %> | <%= link_to 'Edit', edit_harvesting_record_path(harvesting_record) %> | <%= link_to 'Destroy', harvesting_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>

            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <div class="row">
         <div class="small-4 columns">
            <%= link_to 'Home', '/' %>
         </div>
         <div class="small-4 columns">
            <p class="text-center"><%= link_to 'Show', @harvesting_record %> </p>
         </div>
         <div class="small-4 columns">
            <p class="text-right"><%= link_to 'New Harvesting Record', new_harvesting_record_path %></p>
         </div>
     </div>
   </div>
</div>